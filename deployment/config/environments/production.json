{
  "environment": "production",
  "name": "Production Environment",
  "description": "Production environment with security hardening and optimization",

  "build": {
    "optimization_level": "maximum",
    "debug_info": false,
    "strip_binaries": true,
    "include_tests": false,
    "create_debug_symbols": false,
    "enable_profiling": false,
    "enable_coverage": false
  },

  "deployment": {
    "auto_deploy": true,
    "require_approval": true,
    "create_backups": true,
    "rollback_on_failure": true,
    "notify_on_success": true,
    "notify_on_failure": true,
    "health_checks": true,
    "smoke_tests": true
  },

  "features": {
    "file_transfer": true,
    "voice_calls": true,
    "performance_monitoring": true,
    "security_testing": true,
    "gui_enhancements": true,
    "crypto_optimizations": true,
    "debug_features": false,
    "development_tools": false
  },

  "logging": {
    "level": "WARNING",
    "format": "json",
    "output": ["file", "syslog"],
    "file_path": "/var/log/privatus-chat/privatus-chat.log",
    "max_size": "50MB",
    "backup_count": 10,
    "enable_timestamps": true,
    "enable_thread_info": false,
    "enable_stack_traces": false,
    "log_rotation": "daily",
    "compress_old_logs": true
  },

  "security": {
    "relaxed_checks": false,
    "allow_insecure_connections": false,
    "disable_certificate_validation": false,
    "enable_security_audit": true,
    "require_encryption": true,
    "allow_self_signed_certificates": false,
    "enable_hsm": false,
    "key_rotation_days": 30,
    "session_timeout_minutes": 60,
    "max_login_attempts": 5,
    "lockout_duration_minutes": 15
  },

  "performance": {
    "monitoring_enabled": true,
    "detailed_metrics": false,
    "memory_profiling": false,
    "cpu_profiling": false,
    "network_monitoring": true,
    "gui_responsiveness_tracking": false,
    "cache_statistics": true,
    "performance_thresholds": {
      "max_memory_usage_mb": 512,
      "max_cpu_usage_percent": 80,
      "max_response_time_ms": 1000,
      "min_throughput_msgs_per_second": 100
    }
  },

  "testing": {
    "run_all_tests": true,
    "fail_fast": true,
    "generate_coverage_report": false,
    "run_performance_tests": true,
    "run_security_tests": true,
    "run_integration_tests": true,
    "test_timeout": 60,
    "parallel_execution": true,
    "workers": 8
  },

  "gui": {
    "theme": "system",
    "show_debug_info": false,
    "show_performance_metrics": false,
    "show_network_status": true,
    "show_crypto_status": false,
    "enable_animations": true,
    "developer_menu": false,
    "experimental_features": false
  },

  "network": {
    "p2p_debug": false,
    "show_peer_info": false,
    "log_all_messages": false,
    "enable_packet_inspection": false,
    "simulate_network_conditions": false,
    "test_network_failures": false,
    "connection_limits": {
      "max_peers": 100,
      "max_connections_per_peer": 5,
      "connection_timeout_seconds": 30,
      "keepalive_interval_seconds": 60
    }
  },

  "crypto": {
    "debug_mode": false,
    "log_key_operations": false,
    "show_key_info": false,
    "enable_key_inspection": false,
    "test_crypto_failures": false,
    "performance_analysis": false,
    "key_derivation_iterations": 100000,
    "encryption_algorithm": "AES-256-GCM",
    "hash_algorithm": "SHA-256"
  },

  "storage": {
    "debug_mode": false,
    "log_all_operations": false,
    "show_storage_info": false,
    "enable_storage_inspection": false,
    "test_storage_failures": false,
    "performance_analysis": false,
    "encryption_enabled": true,
    "compression_enabled": true,
    "backup_enabled": true,
    "retention_days": 90
  },

  "notifications": {
    "enable_toasts": true,
    "show_debug_notifications": false,
    "log_notifications": true,
    "test_notification_system": false,
    "notification_channels": ["gui", "system"],
    "rate_limiting": {
      "max_notifications_per_minute": 10,
      "burst_limit": 5
    }
  },

  "error_handling": {
    "show_detailed_errors": false,
    "enable_error_reporting": true,
    "create_error_dumps": false,
    "show_stack_traces": false,
    "enable_crash_reporting": true,
    "error_reporting_endpoint": "https://errors.privatus-chat.org/report"
  },

  "compatibility": {
    "check_system_requirements": true,
    "allow_unsupported_systems": false,
    "skip_version_checks": false,
    "ignore_deprecation_warnings": false,
    "minimum_requirements": {
      "os_version_windows": "10.0.19041",
      "os_version_macos": "11.0",
      "os_version_linux_kernel": "5.4",
      "memory_mb": 1024,
      "disk_space_mb": 500,
      "cpu_cores": 2
    }
  },

  "monitoring": {
    "enabled": true,
    "metrics_collection": true,
    "health_checks": true,
    "performance_monitoring": true,
    "error_tracking": true,
    "user_analytics": false,
    "reporting_interval_seconds": 300,
    "retention_days": 30
  },

  "updates": {
    "auto_update": true,
    "update_channel": "stable",
    "check_interval_hours": 24,
    "require_confirmation": true,
    "allow_rollback": true,
    "update_server": "https://updates.privatus-chat.org"
  },

  "backup": {
    "enabled": true,
    "interval_hours": 24,
    "retention_days": 30,
    "compression": true,
    "encryption": true,
    "location": "/var/backups/privatus-chat",
    "max_backups": 10
  }
}