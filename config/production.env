# Production Environment Configuration
# This file contains configuration settings for production environment

# Application Settings
APP_NAME=Privatus-chat
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# Database Settings
DB_PATH=~/.privatus-chat/database.db
DB_ENCRYPTION_KEY_FILE=~/.privatus-chat/db_key.key

# Network Settings
NETWORK_PORT=8080
BOOTSTRAP_NODES=
DHT_PORT=6881

# Security Settings
KEY_DERIVATION_ITERATIONS=500000
SESSION_TIMEOUT=1800
# Master password for key encryption (set this securely in production)
# PRIVATUS_MASTER_PASSWORD=your_secure_master_password_here

# Production Features
ENABLE_DEBUG_LOGGING=false
ENABLE_NETWORK_SIMULATION=false
BYPASS_ONION_ROUTING=false
ENABLE_TELEMETRY=false 